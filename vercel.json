<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>AURA SCANN–ïR PRO</title>
    <script src="https://cdn.jsdelivr.net/npm/onnxruntime-web@1.20.1/dist/ort.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <style>
        :root { --gold: #d4af37; --neon: #00ffea; --bg: #000; }
        body { margin: 0; background: var(--bg); overflow: hidden; font-family: 'Roboto', sans-serif; color: var(--gold); }
        #container { position: relative; width: 100vw; height: 100vh; }
        
        video#input-video { width: 100%; height: 100%; object-fit: cover; display: none; }
        canvas { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 5; pointer-events: none; }

        /* –î–ò–ê–ì–ù–û–°–¢–ò–ö–ê */
        #diag-panel { 
            position: absolute; top: 120px; left: 15px; z-index: 25; 
            background: rgba(0,0,0,0.6); padding: 8px; border-left: 2px solid var(--neon);
            font-family: monospace; font-size: 10px; color: var(--neon); pointer-events: none;
        }

        /* –ò–ù–¢–ï–†–§–ï–ô–° */
        .ui-layer { position: absolute; top:0; left:0; width: 100%; height: 100%; pointer-events: none; display: flex; flex-direction: column; justify-content: space-between; z-index: 10; }
        .top-panel { background: rgba(0,0,0,0.8); padding: 15px; pointer-events: auto; border-bottom: 1px solid var(--gold); }
        input[type="text"] { background: rgba(255,255,255,0.1); border: 1px solid var(--gold); color: #fff; padding: 10px; border-radius: 5px; font-size: 16px; width: 90%; display: block; margin: 0 auto; }
        
        .expert-switch { display: flex; justify-content: center; gap: 10px; margin-top: 10px; }
        .expert-btn { background: #222; border: 1px solid #555; color: #888; padding: 8px 15px; border-radius: 20px; cursor: pointer; font-size: 12px; }
        .expert-btn.active.margot { background: #5a2a4a; border-color: #ff69b4; color: #fff; box-shadow: 0 0 10px #ff69b4; }
        .expert-btn.active.messire { background: #1a2a3a; border-color: #4da6ff; color: #fff; box-shadow: 0 0 10px #4da6ff; }

        .bottom-panel { padding: 30px; pointer-events: auto; text-align: center; background: linear-gradient(to top, rgba(0,0,0,0.9), transparent); }
        .scan-btn { background: var(--gold); color: #000; border: none; width: 70px; height: 70px; border-radius: 50%; font-size: 30px; box-shadow: 0 0 20px var(--gold); cursor: pointer; }

        /* –í–ò–†–¢–£–ê–õ–¨–ù–´–ô –°–¢–û–õ (–û–ü–¢–ò–ú–ò–ó–ò–†–û–í–ê–ù–ù–´–ô) */
        #result-box { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #050505; z-index: 100; display: none; flex-direction: column; }
        .result-scroll-area { flex: 1; overflow-y: auto; padding: 20px; }
        
        /* –°–µ—Ç–∫–∞, –∫–æ—Ç–æ—Ä–∞—è "—É–∂–∏–º–∞–µ—Ç" –∫–∞—Ä—Ç—ã, —á—Ç–æ–±—ã –≤–ª–µ–∑–ª–æ –±–æ–ª—å—à–µ */
        .cards-grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(85px, 1fr)); 
            gap: 12px; margin-bottom: 25px; 
        }

        .card-item { display: flex; flex-direction: column; align-items: center; cursor: pointer; position: relative; }
        .card-visual { width: 100%; border-radius: 6px; border: 1px solid var(--gold); box-shadow: 0 4px 10px rgba(0,0,0,0.5); }
        .card-name-mini { font-size: 10px; margin-top: 5px; color: #fff; text-align: center; text-transform: uppercase; letter-spacing: 1px; }

        /* –ó–£–ú */
        #zoom-modal { position: fixed; inset: 0; background: rgba(0,0,0,0.98); z-index: 200; display: none; flex-direction: column; justify-content: center; align-items: center; }
        
        /* –°–¢–ê–†–¢–û–í–´–ô –≠–ö–†–ê–ù */
        #start-screen { position: absolute; inset:0; background:#000; z-index:999; display: flex; flex-direction: column; align-items: center; justify-content: center; }
        .logo-text { font-family: 'Cinzel', serif; font-size: 32px; color: var(--gold); animation: pulse 3s infinite; text-align: center; }
        @keyframes pulse { 0%, 100% { opacity: 0.7; transform: scale(0.95); } 50% { opacity: 1; transform: scale(1.05); } }
    </style>
</head>
<body>

<div id="container">
    <div id="start-screen">
        <div class="logo-text">AURA SYSTEM<br><span style="font-size: 14px; letter-spacing: 5px;">PRO EDITION</span></div>
        <button id="big-start-btn" onclick="initSystem()" style="margin-top:50px; padding: 15px 40px; background: transparent; color: var(--gold); border: 2px solid var(--gold); border-radius: 30px; font-family: 'Cinzel'; cursor: pointer;">–í–û–ô–¢–ò –í –ü–û–¢–û–ö</button>
        <div id="loader" style="display:none; color: #555; margin-top: 20px; font-size: 11px;">–°–ò–ù–•–†–û–ù–ò–ó–ê–¶–ò–Ø –ù–ï–ô–†–û–°–ï–¢–ò...</div>
    </div>

    <div id="diag-panel">
        INF: <span id="inf-ms">0</span>ms | FPS: <span id="fps-cnt">0</span>
    </div>

    <video id="input-video" playsinline muted autoplay></video>
    <canvas id="canvas"></canvas>
    
    <div class="ui-layer">
        <div class="top-panel">
            <input type="text" id="questionInput" placeholder="–í–∞—à –≤–æ–ø—Ä–æ—Å –í—Å–µ–ª–µ–Ω–Ω–æ–π...">
            <div class="expert-switch">
                <div class="expert-btn active margot" onclick="setExpert('margot')">–ú–ê–†–ì–û</div>
                <div class="expert-btn" onclick="setExpert('messire')">–ú–ï–°–°–ò–†</div>
            </div>
        </div>
        <div id="status" style="text-align: center; font-size: 12px; margin-bottom: 10px; text-shadow: 0 2px 4px #000;">–û–ñ–ò–î–ê–ù–ò–ï...</div>
        <div class="bottom-panel">
            <button class="scan-btn" onclick="captureRead()">üëÅÔ∏è</button>
        </div>
    </div>

    <div id="result-box">
        <div class="result-scroll-area">
            <h2 id="res-header" style="color: var(--gold); font-family: 'Cinzel'; text-align: center; letter-spacing: 3px;">–û–¢–í–ï–¢</h2>
            <div id="cards-container" class="cards-grid"></div>
            <div id="ai-response" style="color: #ccc; font-size: 14px; line-height: 1.6; background: #111; padding: 20px; border-radius: 8px; border: 1px solid #222;"></div>
        </div>
        <button onclick="closeResult()" style="padding: 20px; background: #111; color: var(--gold); border: none; border-top: 1px solid var(--gold); cursor: pointer; font-family: 'Cinzel';">–ù–û–í–´–ô –°–ö–ê–ù</button>
    </div>

    <div id="zoom-modal" onclick="closeZoom()">
        <h2 id="zoom-title" style="font-family: 'Cinzel'; color: var(--gold);"></h2>
        <div id="zoom-media"></div>
    </div>
</div>

<script>
    const NAMES_RU = ["–®—É—Ç", "–ú–∞–≥", "–ñ—Ä–∏—Ü–∞", "–ò–º–ø–µ—Ä–∞—Ç—Ä–∏—Ü–∞", "–ò–º–ø–µ—Ä–∞—Ç–æ—Ä", "–ò–µ—Ä–æ—Ñ–∞–Ω—Ç", "–í–ª—é–±–ª–µ–Ω–Ω—ã–µ", "–ö–æ–ª–µ—Å–Ω–∏—Ü–∞", "–°–∏–ª–∞", "–û—Ç—à–µ–ª—å–Ω–∏–∫", "–ö–æ–ª–µ—Å–æ –§–æ—Ä—Ç—É–Ω—ã", "–°–ø—Ä–∞–≤–µ–¥–ª–∏–≤–æ—Å—Ç—å", "–ü–æ–≤–µ—à–µ–Ω–Ω—ã–π", "–°–º–µ—Ä—Ç—å", "–£–º–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å", "–î—å—è–≤–æ–ª", "–ë–∞—à–Ω—è", "–ó–≤–µ–∑–¥–∞", "–õ—É–Ω–∞", "–°–æ–ª–Ω—Ü–µ", "–°—É–¥", "–ú–∏—Ä", "–†—É–±–∞—à–∫–∞", "–¢—É–∑ –ö—É–±–∫–æ–≤", "2 –ö—É–±–∫–æ–≤", "3 –ö—É–±–∫–æ–≤", "4 –ö—É–±–∫–æ–≤", "5 –ö—É–±–∫–æ–≤", "6 –ö—É–±–∫–æ–≤", "7 –ö—É–±–∫–æ–≤", "8 –ö—É–±–∫–æ–≤", "9 –ö—É–±–∫–æ–≤", "10 –ö—É–±–∫–æ–≤", "–ü–∞–∂ –ö—É–±–∫–æ–≤", "–†—ã—Ü–∞—Ä—å –ö—É–±–∫–æ–≤", "–ö–æ—Ä–æ–ª–µ–≤–∞ –ö—É–±–∫–æ–≤", "–ö–æ—Ä–æ–ª—å –ö—É–±–∫–æ–≤", "–¢—É–∑ –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "2 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "3 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "4 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "5 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "6 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "7 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "8 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "9 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "10 –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "–ü–∞–∂ –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "–†—ã—Ü–∞—Ä—å –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "–ö–æ—Ä–æ–ª–µ–≤–∞ –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "–ö–æ—Ä–æ–ª—å –ü–µ–Ω—Ç–∞–∫–ª–µ–π", "–¢—É–∑ –ú–µ—á–µ–π", "2 –ú–µ—á–µ–π", "3 –ú–µ—á–µ–π", "4 –ú–µ—á–µ–π", "5 –ú–µ—á–µ–π", "6 –ú–µ—á–µ–π", "7 –ú–µ—á–µ–π", "8 –ú–µ—á–µ–π", "9 –ú–µ—á–µ–π", "10 –ú–µ—á–µ–π", "–ü–∞–∂ –ú–µ—á–µ–π", "–†—ã—Ü–∞—Ä—å –ú–µ—á–µ–π", "–ö–æ—Ä–æ–ª–µ–≤–∞ –ú–µ—á–µ–π", "–ö–æ—Ä–æ–ª—å –ú–µ—á–µ–π", "–¢—É–∑ –ñ–µ–∑–ª–æ–≤", "2 –ñ–µ–∑–ª–æ–≤", "3 –ñ–µ–∑–ª–æ–≤", "4 –ñ–µ–∑–ª–æ–≤", "5 –ñ–µ–∑–ª–æ–≤", "6 –ñ–µ–∑–ª–æ–≤", "7 –ñ–µ–∑–ª–æ–≤", "8 –ñ–µ–∑–ª–æ–≤", "9 –ñ–µ–∑–ª–æ–≤", "10 –ñ–µ–∑–ª–æ–≤", "–ü–∞–∂ –ñ–µ–∑–ª–æ–≤", "–†—ã—Ü–∞—Ä—å –ñ–µ–∑–ª–æ–≤", "–ö–æ—Ä–æ–ª–µ–≤–∞ –ñ–µ–∑–ª–æ–≤", "–ö–æ—Ä–æ–ª—å –ñ–µ–∑–ª–æ–≤"];
    
    // –ò–º–µ–Ω–∞ —Ñ–∞–π–ª–æ–≤ –¥–ª—è GitHub
    const NAMES_EN = ["00-TheFool","01-TheMagician","02-TheHighPriestess","03-TheEmpress","04-TheEmperor","05-TheHierophant","06-TheLovers","07-TheChariot","08-Strength","09-TheHermit","10-WheelOfFortune","11-Justice","12-TheHangedMan","13-Death","14-Temperance","15-TheDevil","16-TheTower","17-TheStar","18-TheMoon","19-TheSun","20-Judgement","21-TheWorld","CardBacks","Cups01","Cups02","Cups03","Cups04","Cups05","Cups06","Cups07","Cups08","Cups09","Cups10","Cups11","Cups12","Cups13","Cups14","Pentacles01","Pentacles02","Pentacles03","Pentacles04","Pentacles05","Pentacles06","Pentacles07","Pentacles08","Pentacles09","Pentacles10","Pentacles11","Pentacles12","Pentacles13","Pentacles14","Swords01","Swords02","Swords03","Swords04","Swords05","Swords06","Swords07","Swords08","Swords09","Swords10","Swords11","Swords12","Swords13","Swords14","Wands01","Wands02","Wands03","Wands04","Wands05","Wands06","Wands07","Wands08","Wands09","Wands10","Wands11","Wands12","Wands13","Wands14"];

    let session, video, canvas, ctx, currentExpert = 'margot';
    let lockedCards = new Map(), buffer = new Map();
    let lastTime = performance.now(), frameCount = 0;

    async function initSystem() {
        document.getElementById('big-start-btn').style.display = 'none';
        document.getElementById('loader').style.display = 'block';

        try {
            ort.env.wasm.numThreads = 1;
            // –ó–∞–≥—Ä—É–∑–∫–∞ –º–æ–¥–µ–ª–∏ –∏–∑ –∫–æ—Ä–Ω—è public
            session = await ort.InferenceSession.create('./tarot_best.onnx', { executionProviders: ['wasm'] });
            
            video = document.getElementById('input-video');
            const stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } });
            video.srcObject = stream;
            
            video.onloadedmetadata = () => {
                canvas = document.getElementById('canvas');
                canvas.width = video.videoWidth; canvas.height = video.videoHeight;
                ctx = canvas.getContext('2d');
                document.getElementById('start-screen').style.opacity = '0';
                setTimeout(() => { document.getElementById('start-screen').style.display = 'none'; }, 1000);
                video.style.display = 'block';
                loop();
            };
        } catch (e) { alert("–û—à–∏–±–∫–∞: " + e.message); }
    }

    function setExpert(name) {
        currentExpert = name;
        document.querySelectorAll('.expert-btn').forEach(b => b.classList.remove('active', 'margot', 'messire'));
        const activeBtn = event.target;
        activeBtn.classList.add('active', name);
    }

    async function loop() {
        frameCount++;
        const now = performance.now();
        if (now - lastTime >= 1000) {
            document.getElementById('fps-cnt').innerText = frameCount;
            frameCount = 0; lastTime = now;
        }

        const startInf = performance.now();
        const mat = document.createElement('canvas'); mat.width = mat.height = 640;
        mat.getContext('2d').drawImage(video, 0, 0, 640, 640);
        const pix = mat.getContext('2d').getImageData(0,0,640,640).data;
        
        const input = new Float32Array(3 * 640 * 640);
        for (let i=0; i<640*640; i++) {
            input[i] = pix[i*4]/255;
            input[640*640+i] = pix[i*4+1]/255;
            input[2*640*640+i] = pix[i*4+2]/255;
        }

        try {
            const tensor = new ort.Tensor('float32', input, [1, 3, 640, 640]);
            const results = await session.run({ [session.inputNames[0]]: tensor });
            document.getElementById('inf-ms').innerText = (performance.now() - startInf).toFixed(1);
            processResults(results[session.outputNames[0]].data);
        } catch (e) {}
        
        requestAnimationFrame(loop);
    }

    function processResults(data) {
        const anchors = 8400;
        const sx = canvas.width / 640, sy = canvas.height / 640;
        ctx.clearRect(0,0,canvas.width,canvas.height);

        for (let i=0; i<anchors; i++) {
            let conf = 0, cls = -1;
            for (let c=4; c<83; c++) {
                if (data[c*anchors+i] > conf) { conf = data[c*anchors+i]; cls = c-4; }
            }

            if (conf > 0.55) {
                const x = data[0*anchors+i]*sx, y = data[1*anchors+i]*sy;
                const w = data[2*anchors+i]*sx, h = data[3*anchors+i]*sy;

                if (!lockedCards.has(cls)) {
                    let b = buffer.get(cls) || { count: 0 };
                    b.count++; buffer.set(cls, b);
                    if (b.count > 10) {
                        lockedCards.set(cls, { x, y, name: NAMES_RU[cls], file: NAMES_EN[cls] });
                        if (navigator.vibrate) navigator.vibrate(40);
                    }
                    ctx.strokeStyle = "#00ffea"; ctx.lineWidth = 1; ctx.setLineDash([5,5]);
                    ctx.strokeRect(x-w/2, y-h/2, w, h);
                }
            }
        }
        
        lockedCards.forEach(item => {
            ctx.strokeStyle = "#d4af37"; ctx.lineWidth = 2; ctx.setLineDash([]);
            ctx.strokeRect(item.x-60, item.y-90, 120, 180);
            ctx.fillStyle = "#d4af37"; ctx.font = "bold 14px Cinzel";
            ctx.fillText(item.name, item.x-60, item.y-100);
        });

        document.getElementById('status').innerText = `–°–ò–°–¢–ï–ú–ê –í–ò–î–ò–¢: ${lockedCards.size} / 11`;
    }

    function captureRead() {
        if (lockedCards.size === 0) return;
        const container = document.getElementById('cards-container');
        container.innerHTML = "";
        
        // –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏ –¥–ª—è –ø—Ä–∞–≤–∏–ª—å–Ω–æ–≥–æ —á—Ç–µ–Ω–∏—è —Ä–∞—Å–∫–ª–∞–¥–∞
        const sorted = Array.from(lockedCards.values()).sort((a,b) => a.x - b.x);
        
        sorted.forEach(card => {
            const div = document.createElement('div');
            div.className = 'card-item';
            div.onclick = () => openZoom(card);
            div.innerHTML = `
                <img src="/cards/${card.file}.jpg" class="card-visual" onerror="this.src='https://via.placeholder.com/100x150?text=CARD'">
                <div class="card-name-mini">${card.name}</div>
            `;
            container.appendChild(div);
        });

        document.getElementById('ai-response').innerText = "–ú–µ—Å—Å–∏—Ä –∞–Ω–∞–ª–∏–∑–∏—Ä—É–µ—Ç –≤–∞—à —Ä–∞—Å–∫–ª–∞–¥... –û–±–æ—Å–Ω–æ–≤–∞–Ω–∏–µ –∞—Ä–∫–∞–Ω–æ–≤ –±—É–¥–µ—Ç –¥–æ—Å—Ç—É–ø–Ω–æ –≤ —Å–ª–µ–¥—É—é—â–µ–º –º–æ–¥—É–ª–µ.";
        document.getElementById('result-box').style.display = 'flex';
    }

    function openZoom(card) {
        document.getElementById('zoom-title').innerText = card.name;
        document.getElementById('zoom-media').innerHTML = `<img src="/cards/${card.file}.jpg" style="max-height: 70vh; border: 1px solid var(--gold); border-radius: 10px;">`;
        document.getElementById('zoom-modal').style.display = 'flex';
    }

    function closeZoom() { document.getElementById('zoom-modal').style.display = 'none'; }
    function closeResult() { document.getElementById('result-box').style.display = 'none'; lockedCards.clear(); buffer.clear(); }

    window.onload = () => {};
</script>
</body>
</html>
